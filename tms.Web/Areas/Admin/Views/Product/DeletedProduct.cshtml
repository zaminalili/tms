@{
    ViewData["Title"] = "Silinmiş məhsullar";
}
@model List<ProductDto>

<div class="pagetitle my-3">
    <h1><i class="ri-delete-bin-7-fill"></i> Silinmiş Məhsullar</h1>

</div><!-- End Page Title -->

<section class="section dashboard mb-5">
    <div class="row">

        @if (Model.Count == 0)
        {
            <p class="mt-3">Silinmiş məhsul hissəsi boşdur</p>
        }
        else
        {
            <div class="d-flex align-content-around flex-wrap">


                @foreach (var item in Model)
                {
                    <div class="card me-3 mb-3 ps-3" style="width: 16rem;">
                        <img src="~/@item.Image.FileName" style="width: 200px;" class="card-img-top rounded ms-1">
                        <div class="card-body">
                            <h5 class="card-title">
                                @item.Name <span class="text-muted">@item.Code</span>
                            </h5>
                            <div class="d-flex flex-column mb-3">
                                <span class="card-text">Category</span>
                                <div>
                                    <a asp-action="RestoreCategory" asp-route-id="@item.Id" class="btn btn-success btn-sm" onclick="return confirm('Məhsul bərpa edilsin mi?')">Bərpa</a>
                                    <a asp-action="DeleteCategory" asp-route-id="@item.Id" class="btn btn-danger btn-sm" onclick="return confirm('Məhsul birdəfəlik silinsin mi?')">Birdəfəlik sil</a>

                                    <span class="dropup-center dropup">
                                        <button class="btn btn-light" type="button" data-bs-toggle="dropdown" aria-expanded="false">
                                            :
                                        </button>
                                        <span class="dropdown-menu">
                                            Yaradılıb: @item.CreatedBy
                                            <br>
                                            Yaradılma tarix: @item.CreatedDate
                                            <br>
                                            Silinib: @item.DeletedBy
                                            <br>
                                            Silinmə tarixi: @item.DeletedDate
                                        </span>
                                    </span>
                                </div>


                            </div>
                        </div>
                    </div>
                }

                


            </div>
        }

        



    </div>

    <a asp-action="Index" class="btn btn-link">Geri</a>

</section>
