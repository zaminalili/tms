@{
    ViewData["Title"] = "Məhsul qiyməti";
}
@model List<ProductPriceDto>


<div class="pagetitle my-3">
    <h1>Məhsul qiyməti</h1>

</div><!-- End Page Title -->

<div class="my-3">
    <a asp-action="ChangePriceViewStatus" class="btn btn-info btn-sm text-white">
        @if (ViewBag.IsPriceViewActive == false)
        {
            <i class="ri-eye-line"></i>
            <span>Göstər</span>
        }
        else
        {
            <i class="ri-eye-off-line"></i>
            <span>Gizlə</span>
        }
    </a>

    <span class="fs-6 text-muted">Məhsulun qiymətinin istifadəçilər tərəfindən görünüb-görünməməsini bildirir.</span>
</div>




<div class="accordion accordion-flush w-50 mb-4" id="country">
    <div class="accordion-item px-2 mb-2">
        <h2 class="accordion-header" id="flush-headingTwo">
            <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#flush-collapseTwo" aria-expanded="false" aria-controls="flush-collapseTwo">
                Qiymətləri dəyiş
            </button>
        </h2>
        <div id="flush-collapseTwo" class="accordion-collapse collapse" aria-labelledby="flush-headingTwo" data-bs-parent="#country">
            <div class="accordion-body">

                <form asp-action="UpdatePrice" method="post">

                    <div class="d-flex justify-content-start">


                        <input  name="Unit" class="form-control w-25" type="number" value="0" min="0">



                        <select  name="Type" class="form-select form-select-sm m-2 w-25" aria-label=".form-select-sm example">

                            <option value="0">Faiz (%)</option>
                            <option value="1">Vahid (manat)</option>
                            <option value="2">Dəfə</option>
                        </select>


                    </div>



                    <div class="form-check form-check-inline mt-3">
                        <input name="Variation" class="form-check-input" type="radio"  id="inlineRadio1" value="0">
                        <label class="form-check-label">Artır</label>
                    </div>

                    <div class="form-check form-check-inline">
                        <input name="Variation" class="form-check-input" type="radio"  id="inlineRadio2" value="1">
                        <label  class="form-check-label" >Azalt</label>
                    </div>

                    <div class="d-flex justify-content-start">
                        <span class="pt-2">Bütün</span>

                        <select name="CategoryId" class="form-select form-select-sm m-2 w-25" aria-label=".form-select-sm example">
                            @foreach (var item in ViewBag.Categories)
                            {
                                <option value="@item.Id">
                                    @item.Subname_AZ
                                    @if (item.SubofSubname_AZ != null)
                                    {
                                        <span>- @item.SubofSubname_AZ</span>
                                    }
                                </option>
                            }
                            
                          
                        </select>

                        <span class="pt-2">məhsullarını</span>

                    </div>

                    <button type="submit" class="btn btn-primary btn-sm mt-3">Dəyiş</button>
                </form>

            </div>
        </div>
    </div>
</div>


<form method="get" class="d-flex justify-content-start">
    <div class="filtrInput d-flex justify-content-between my-3 me-3 w-25">
        <!-- <span>Qiymət aralığı</span> -->

        <input name="minValue" class=" form-control" type="number" placeholder="minimum" id="min" value="@ViewBag.MinValue" min="0">
        <span>&#160;_&#160;</span>
        <input name="maxValue" class="form-control" type="number" placeholder="maksimum" id="max" value="@(ViewBag.MaxValue == 0 ? "" : @ViewBag.MaxValue )" min="0">
    </div>

    <div class="my-3 me-3">
        <select name="categoryId" class="form-select" aria-label="Default select example">

            <option value="null">Hamısı</option>
            @foreach (var item in ViewBag.Categories)
            {
                @if (item.Id == ViewBag.CategoryId)
                {
                    <option value="@item.Id" selected >
                        @item.Subname_AZ
                        @if (item.SubofSubname_AZ != null)
                        {
                            <span>- @item.SubofSubname_AZ</span>
                        }
                    </option>
                }
                else
                {
                    <option value="@item.Id">
                        @item.Subname_AZ
                        @if (item.SubofSubname_AZ != null)
                        {
                            <span>- @item.SubofSubname_AZ</span>
                        }
                    </option>
                }
                
            }

            
        </select>
    </div>

    <div class="my-3 me-3">
        <button class="btn btn-outline-secondary btn-sm" id="filtrButton">Filtrlə</button>

    </div>

</form>



<section class="section dashboard">

    <div class="card">
        <div class="card-body">

            <table class="table">
                <thead>
                    <tr>

                        <th scope="col">Adı</th>
                        <th scope="col">Kodu</th>
                        <th scope="col">Qiymət</th>
                        <th scope="col">Kateqoriya</th>

                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.Name</td>
                            <td>@item.Code</td>
                            <td>@item.Price &#8380;</td>
                            <td>
                                @item.Category.Subname_AZ
                                @if (item.Category.SubofSubname_AZ != null)
                                {
                                    <span>- @item.Category.SubofSubname_AZ</span>
                                }
                            </td>

                        </tr>
                    }

                    

                </tbody>
            </table>
            <!-- End Default Table  -->
        </div>
    </div>

    <a asp-action="Index" class="btn btn-link">Geri</a>
</section>

<script>

    let min = document.getElementById("min");
    let minValue = parseInt(min.value);

    let max = document.getElementById("max");
    let maxValue = parseInt(max.value);

    let filtrButton = document.getElementById("filtrButton");

    let filtrInput = document.querySelector(".filtrInput");



    filtrInput.addEventListener("input", updateValue);


    function updateValue(e) {

        // // console.log(parseInt(min.value));
        //   console.log(maxValue);


        if (parseInt(min.value) > parseInt(max.value)) {

            filtrButton.disabled = true;
        }
        else if (parseInt(min.value) < parseInt(max.value)) {
            filtrButton.disabled = false;

        }

        if (parseInt(min.value) < 0 || parseInt(max.value) < 0) {
            filtrButton.disabled = true;
        }
        else {
            filtrButton.disabled = false;

        }

    }



</script>