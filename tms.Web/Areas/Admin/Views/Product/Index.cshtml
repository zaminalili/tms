@{
    ViewData["Title"] = "Məhsullar";
}
@model List<ProductDto>

<div class="pagetitle my-3">
    <h1>Məhsullar</h1>

</div><!-- End Page Title -->

<section class="section dashboard mb-5">
    <div class="row">

        <div class="my-3">
            <a asp-action="AddProduct" class="btn btn-outline-primary mt-1"><i class="ri-add-line"></i> Yeni məhsul</a>
            <a asp-action="DeletedProduct" class="btn btn-outline-danger mt-1"> <i class="ri-delete-bin-2-line"></i> Silinmişlər</a>
            <a asp-action="ProductPrices" class="btn btn-outline-success mt-1"> $ Qiymət</a>
        </div>


        

        <div class="d-flex align-content-around flex-wrap">

            @foreach (var item in Model)
            {
                <div class="card me-3 mb-3 ps-3" style="width: 16rem;">
                    <img src="~/@item.Image.FileName" style="width: 200px;" class="card-img-top rounded ms-1" alt="image">
                    <div class="card-body">
                        <h5 class="card-title">
                            @item.Name <span class="text-muted">@item.Code</span>
                        </h5>
                        <div class="d-flex justify-content-between">
                            <span class="card-text">@item.Category.Name_AZ</span>
                            <div>
                                <a asp-action="EditProduct" asp-route-id="@item.Id" class="btn btn-success btn-sm ri-edit-line"></a>
                                <a asp-action="RemoveProduct" asp-route-id="@item.Id" class="btn btn-danger btn-sm ri-delete-bin-7-line" ></a>

                                <span class="dropup-center dropup">
                                    <button class="btn btn-light" type="button" data-bs-toggle="dropdown" aria-expanded="false">
                                        :
                                    </button>
                                    <span class="dropdown-menu">
                                        Yaradılıb: @item.CreatedBy
                                        <br>
                                        Yaradılma tarixi: @item.CreatedDate
                                        <br>
                                        Yenilənib: @item.EditedBy
                                        <br>
                                        Yenilənmə tarixi: @item.EditedDate
                                    </span>
                                </span>
                            </div>


                        </div>
                    </div>
                </div>
            }

            


        </div>



    </div>
</section>
