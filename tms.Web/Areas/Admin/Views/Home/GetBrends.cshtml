@{
	ViewData["Title"] = "Brendlər";
}

@model List<Brend>


<div>
    <a asp-action="AddBrend" class="btn btn-outline-primary">+ Yeni Brend</a>
</div>

<div class="d-flex flex-wrap">
   
    @foreach (var item in Model)
    {
        <div class="card m-3" style="width: 18rem;">
            <img src="~/@item.Image.FileName" class="card-img-top" alt="img">
            <div class="card-body">
                <h5 class="card-title">@item.Name</h5>
                <a asp-action="DeleteBrend" asp-route-id="@item.Id" class="btn btn-danger">Sil</a>
            </div>
        </div>
    }

</div>

