@{
    ViewData["Title"] = "Kampaniya";
}

@model List<Offer>


<div class="mb-3">
    <a asp-action="AddOffer" class="btn btn-outline-primary">+Yeni Kampaniya</a>
</div>

@if(Model.Count == 0)
{
    <span>
        Hər hansı kampaniya yoxdur
    </span>
}
else
{
    <div class="d-flex flex-wrap">
        @foreach (var item in Model)
        {
            <div class="card" style="width: 36rem;">
                <img src="~/@item.Image.FileName" class="card-img-top" alt="img">
                <div class="card-body">
                    <h5 class="card-title">@item.Title_AZ</h5>
                    <p class="card-text">@item.Description_AZ</p>
                    <a asp-action="DeleteOffer" asp-route-id="@item.Id" class="btn btn-danger bnt-sm">Sil</a>
                </div>
            </div>
        }
    </div>
}
